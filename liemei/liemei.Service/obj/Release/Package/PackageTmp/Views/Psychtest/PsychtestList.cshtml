@if (Model != null && Model.Count > 0)
{
    foreach (var psy in Model)
    {

        <div class="weui-panel weui-panel_access">
            <div class="weui-panel__bd">
                <a href="/Psychtest/PsychTestInfo?id=@psy.ID" class="weui-media-box weui-media-box_appmsg">
                    <div class="weui-media-box__hd">
                        <img class="weui-media-box__thumb" src="@psy.PsychtestPic" alt="">
                    </div>
                    <div class="weui-media-box__bd">
                        <h4 class="weui-media-box__title">@psy.Name</h4>
                        <p class="weui-media-box__desc">@psy.TestAbstract</p>
                        <span class="boxcs1">@psy.TestMans 人测试</span>
                        @if (psy.PsychtestType == bnuxq.Model.EnumModel.PsychtestPrTypeEnum.Specialty)
                        {
                            var pi = psy.Price.TryToDouble() + 52;
                            <span class="boxcs3">￥ @psy.Price.TryToDouble()</span>
                            <span class="boxcs2">￥ @pi</span>
                        }
                    </div>
                </a>
            </div>
