                            }
                        });
                        //分享给朋友
                        wx.onMenuShareAppMessage({
                            title: '@(user.Name)的心理测评报告', // 分享标题
                            desc: '@Model.Name', // 分享描述
                            link: link, // 分享链接
                            imgUrl: '@Model.PsychtestPic', // 分享图标
                            type: '', // 分享类型,music、video或link，不填默认为link
                            dataUrl: '', // 如果type是music或video，则要提供数据链接，默认为空
                            success: function () {
                                // 用户确认分享后执行的回调函数
                            },
                            cancel: function () {
                                // 用户取消分享后执行的回调函数
                            }
                        });
                        //分享到QQ
                        wx.onMenuShareQQ({
                            title: '@(user.Name)的心理测评报告', // 分享标题
                            desc: '@Model.Name', // 分享描述
                            link: link, // 分享链接
                            imgUrl: '@Model.PsychtestPic', // 分享图标
                            success: function () {
                                // 用户确认分享后执行的回调函数

                            },
                            cancel: function () {
                                // 用户取消分享后执行的回调函数
                            }
                        });
                        //分享到腾讯微博
                        wx.onMenuShareWeibo({
                            title: '@(user.Name)的心理测评报告', // 分享标题
                            desc: '@Model.Name', // 分享描述
                            link: link, // 分享链接
                            imgUrl: '@Model.PsychtestPic', // 分享图标
                            success: function () {
                                // 用户确认分享后执行的回调函数

                            },
                            cancel: function () {
                                // 用户取消分享后执行的回调函数
                            }
                        });
                        //分享到QQ空间
                        wx.onMenuShareQZone({
                            title: '@(user.Name)的心理测评报告', // 分享标题
                            desc: '@Model.Name', // 分享描述
                            link: link, // 分享链接
                            imgUrl: '@Model.PsychtestPic', // 分享图标
                            success: function () {
                                // 用户确认分享后执行的回调函数
                            },
                            cancel: function () {
                                // 用户取消分享后执行的回调函数
                            }
                        });
                    });
                    wx.error(function (res) {
                        // alert("err" + res);
                    });
                });
            }

    $(function () {
        GetWeiXinJsapiConfig();
    });
    </script>
}